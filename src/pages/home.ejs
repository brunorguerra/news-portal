<!DOCTYPE html>
<html lang="pt_BR">
    <%- include('partials/head.ejs') %>
    <body>
        <%- include('partials/header.ejs') %>

        <main>
            <section id="spotlight">
                <div class="slider">
                    <a href="/<%=posts[0].slug%>" class="slider-item">
                        <div class="overlay"></div>
                        <div
                            class="image"
                            style="
                                background: var(--purple)
                                    url(<%=posts[0].imagem%>) no-repeat
                                    center/cover;
                            "
                        ></div>
                        <div class="content">
                            <div class="top">
                                <p>Por <%=posts[0].author%></p>
                            </div>
                            <div class="description">
                                <h2><%= posts[0].titulo %></h2>
                                <p><%- posts[0].conteudo.substr(0, 200) %></p>
                            </div>
                        </div>
                    </a>
                </div>
            </section>

            <section id="latestNews">
                <h2>Ãšltimas Postagens</h2>
                <div class="content">
                    <div class="news">
                        <% posts.forEach(post => { %>
                        <div class="card-news">
                            <div
                                class="image"
                                style="
                                    background: var(--purple)
                                        url(<%=post.imagem%>) no-repeat
                                        center/cover;
                                "
                            ></div>
                            <div class="description">
                                <p><%= post.categoria %></p>
                                <h3 title="<%=post.titulo%>">
                                    <%= post.titulo %>
                                </h3>
                                <p><%- post.conteudo.substr(0, 200) %></p>
                                <a href="/<%= post.slug %>">Ler mais</a>
                            </div>
                        </div>
                        <% }); %>
                    </div>
                    <div class="mostRead">
                        <div class="title">
                            <h3>As Mais Lidas</h3>
                        </div>
                        <div class="content-mostRead">
                            <% postsTop.forEach(post => { %>
                            <div class="card-mostRead">
                                <div
                                    class="image"
                                    style="
                                        background: var(--purple)
                                            url(<%=post.imagem%>) no-repeat
                                            center/cover;
                                    "
                                ></div>
                                <div class="description">
                                    <p><%= post.categoria %></p>
                                    <p><%- post.conteudo.substr(0, 100) %></p>
                                    <a href="/<%= post.slug %>">Saiba mais</a>
                                </div>
                            </div>
                            <% }) %>
                        </div>
                    </div>
                </div>
            </section>
        </main>

        <%- include('partials/footer.ejs') %>
    </body>
</html>
